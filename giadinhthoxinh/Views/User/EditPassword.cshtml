
@{
    ViewBag.Title = "EditPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <section class="custom-section" style="background-color: #8fc4b7; width: 100vw; height: 150vh;">
        <div class="container py-5 h-100 small-container">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3 small-card">
                        <img src="~/Content/assets/images/banner/banner3.jpg"
                             class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                             alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h2 class="mb-3 pb-2 pb-md-0 mb-md-5 px-md-2 text-center m-0">Đổi mật khẩu</h2>
                         

                            <h2>@ViewBag.error </h2> 

                            @using (Html.BeginForm("EditPassword", "User", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">



                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input class="form-control" type="text" name="oldpass" placeholder="Mật khẩu cũ" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input class="form-control" type="text" name="newpass" placeholder="Mật khẩu mới" />
                                        </div>
                                    </div>



                                    <div class="d-flex" style="justify-content: space-evenly; width: 60%; margin: 0 auto">


                                        <input type="submit" value="Đổi mật khẩu" class="btn color-main btn-sm" />
                                        <button class="btn color-main btn-sm" style="background-color:orangered"><a href="/home/index">Hủy</a></button>
                                    </div>


                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

