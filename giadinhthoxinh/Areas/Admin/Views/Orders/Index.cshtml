

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/styles/table_admin.css" rel="stylesheet" />

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title text-lg text-danger">Danh sách hóa đơn bán</h1>

            <div class="card-tools">
                @Html.ActionLink("thêm mới", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>

        <div class="card-body table-responsive text-nowrap">
            <h1>Đơn hàng chưa xử lý</h1>
            @Html.Action("DonHangChuaXuLy_Partial", "Orders")
            <h1>Đơn hàng đang giao</h1>
            @Html.Action("DonHangDangGiao_Partial", "Orders")
            <h1>Đơn hàng đã xử lý</h1>
            @Html.Action("DonHangDaXuLy_Partial", "Orders")

        </div>
        <div class="card-footer">

        </div>
    </div>
</section>